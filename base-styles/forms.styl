$apiaryForm()
  // Define all input types we could need
  input[type="text"],
  input[type="password"],
  input[type="email"],
  input[type="url"],
  input[type^="date"], // covers date, datetime and datetime-local
  input[type="month"],
  input[type="time"],
  input[type="week"],
  input[type="number"],
  input[type="search"],
  input[type="tel"],
  select,
  textarea
    display block
    width 100%
    height 36px
    background-color #fafbfc
    border 1px solid #dde5ed
    border-radius 4px
    font-weight 400
    line-height 1.25
    margin 7px 0 25px
    padding 2px 8px 2px 15px
    vertical-align middle
    &:focus
      outline 0
      border-color $primaryColor
    &:valid:not(:focus):not(:placeholder-shown) // valid inputs that are non-empty
      border-color $secondaryColor
    &:invalid:not(:focus):not(:placeholder-shown) // invalid inputs that are non-empty
      border-color $errorColor

  // Submit button styling
  label + input[type="submit"],
  label + button[type="submit"]
    margin-top 25px

  input[type="submit"],
  button[type="submit"]
    $apiaryButtonPrimary()

  select
    height 36px // Normalizes the height; padding is not sufficient
    border 1px solid #ccc
    background-color white

  select[multiple]
    height auto

  label
    display block
    margin 8px 0 3px

  fieldset
    margin 0
    padding 5px 0 12px
    border 0

  legend
    display block
    width 100%
    padding 4px 0
    margin-bottom 4px
    color #333
    border-bottom 1px solid #e5e5e5
