$alert()
  $mediaObject()
  flex-wrap wrap // Longer items are wrapped - like headings/body
  border-radius 4px
  padding 10px 15px
  text-align center
  margin-bottom 5px
  p
    margin 0
    text-align left

  &__body
    text-align left

  &__heading
    text-align left
    font-weight 600
    font-size 120%
    width 100%

  &--info
    $_alertModifier($infoColor)
  &--success
    $_alertModifier($successColor)
  &--warning
    $_alertModifier($warningColor)
  &--error
    $_alertModifier($errorColor)

$_alertModifier(color)
  background-color tint(color, 90%)
  color darken(color, 47%)
  a
    color darken(color, 50%)
    &:hover, &:focus
      color darken(color, 85%)
